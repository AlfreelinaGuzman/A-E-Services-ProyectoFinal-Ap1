<Window x:Class="WaoCellDominicana_ProyectoFinal_Ap1.UI.Registros.RegistroUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaoCellDominicana_ProyectoFinal_Ap1.UI.Registros"
        mc:Ignorable="d"
        Title="Menu Principal" Height="500" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Orientation = "Vertical" Margin ="20,10">
            <StackPanel Orientation ="Vertical">
                

                <StackPanel Orientation ="Horizontal">
                    <Label Content="UsuarioId" />
                    <TextBox x:Name="UsuarioIdTextBox"  Width="80" Height="20" Text="{Binding UsuarioId}" Margin="10,0"/>
                    <Button x:Name="BuscarButton" Margin="10,0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Buscar"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
                
                


            </StackPanel>

            <StackPanel Orientation = "Vertical" Margin="0,10">
                <StackPanel Orientation ="Horizontal">
                    <Label Content="Nombres" />
                    <TextBox x:Name="NombresTextBox"  Width="150" Height="20" Text="{Binding Nombres}" Margin="10,0,10,0"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation = "Vertical" Margin="0,10">
                <StackPanel Orientation ="Horizontal">
                    <Label Content="Apellidos" />
                    <TextBox x:Name="ApellidosTextBox"  Width="150" Height="20" Text="{Binding Apellidos}" Margin="10,0,10,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation = "Vertical" Margin="0,10">
                <StackPanel Orientation ="Horizontal">
                    <Label Content="NombreUsuario" />
                    <TextBox x:Name="NombreUsuarioTextBox"  Width="150" Height="20" Text="{Binding NombreUsuario}" Margin="10,0,10,0"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation = "Vertical" Margin="0,10">
                <StackPanel Orientation ="Horizontal">
                    <Label Content="Contraseña" />
                    <TextBox x:Name="ContraseñaTextBox"  Width="150" Height="20" Text="{Binding Contraseña}" Margin="10,0,10,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation = "Vertical" Margin="0,10">
                <StackPanel Orientation ="Horizontal">
                    <Label Content="Verificar Contraseña" />
                    <TextBox x:Name="VerificarContraseñaTextBox"  Width="150" Height="20"  Margin="10,0,10,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation = "Vertical" Margin="0,10">
                <StackPanel Orientation ="Horizontal">
                    <Label Content="Telefono" />
                    <TextBox x:Name="TelefonoTextBox"  Width="150" Height="20" Text="{Binding Telefono}" Margin="90,0,10,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation = "Vertical" Margin="0,10">
                <StackPanel Orientation ="Horizontal">
                    <Label Content="Correo" />
                    <TextBox x:Name="CorreoTextBox"  Width="150" Height="20" Text="{Binding Correo}" Margin="90,0,10,0"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
